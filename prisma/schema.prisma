generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextIndex", "fullTextSearch"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Position{
  NONE
  ADVISOR
  HEAD_INSTITUTE
  COMMITTEE_OUTLINE
  COMMITTEE_INSTITUTE
  COMMITTEE_EXAMING
}

enum Role{
  STUDENT
  COMMITTEE
  ADMIN
  SUPER_ADMIN
}

model User {
  id Int          @id @default(autoincrement())
  prefix          String
  firstName       String
  lastName        String
  username        String  @unique
  password        String
  email           String  @unique
  phone           String
  sex             String
  degree          String?
  institute       String?
  school          String?
  program         String?
  programYear     String?
  position        Position
  role            Role
  formState       Int? 
  signatureUrl    String? @db.LongText
  profileUrl      String? @db.LongText

  //นศ. อาจารย์ที่ปรึกษา
  advisorID Int?
  advisor   User?    @relation("advisor", fields: [advisorID], references: [id])
  
  //อาจารย์ที่ปรึกษามี นศ. หลายคน
  students     User[]   @relation("advisor")

  //นศ. สร้างฟอร์ม
  outlineForm             OutlineForm[]     @relation("formOwner")
  //เป็นอาจารย์ที่ปรึกษา thesis
  thesisAdvisor     OutlineForm[]      @relation("thesisAdvisor")
  //เป็นอาจารย์ที่ปรึกษาร่วม thesis
  thesisCoAdvisor   OutlineForm[]      @relation("thesisCoAdvisor")
  //เป็นกรรมการโครงร่าง
  outlineCommittee   OutlineForm[]      @relation("outlineCommittee")
  //เป็นกรรมการโครงร่าง
  instituteCommittee   OutlineForm[]      @relation("instituteCommittee")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OutlineForm {
  id                           Int       @id @default(autoincrement())
  date                         String
  thesisNameTH                 String
  thesisNameEN                 String
  abstract                     String
  processPlan                  Json?

  //กรรมการโครงร่าง
  outlineCommitteeStatus      String?
  outlineCommitteeComment     String?
  outlineCommitteeSignUrl     String? @db.LongText
  dateOutlineCommitteeSign    String?
  outlineCommitteeID Int?
  outlineCommittee       User? @relation(fields: [outlineCommitteeID], references: [id], name: "outlineCommittee")

  //กรรมการสำนัก
  instituteCommitteeStatus      String?
  instituteCommitteeComment     String?
  instituteCommitteeSignUrl     String? @db.LongText
  dateInstituteCommitteeSign    String?
  instituteCommitteeID Int?
  instituteCommittee        User? @relation(fields: [instituteCommitteeID], references: [id], name: "instituteCommittee")

  studentID                    Int
  student        User @relation(fields: [studentID], references: [id], name: "formOwner")

  advisorID                    Int
  advisor        User @relation(fields: [advisorID], references: [id], name: "thesisAdvisor")

  coAdvisorID                 Int?
  coAdvisor      User? @relation(fields: [coAdvisorID], references: [id], name: "thesisCoAdvisor")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}