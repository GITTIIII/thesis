generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextIndex", "fullTextSearch"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role{
  STUDENT
  COMMOTTEE
  ADMIN
  SUPER_ADMIN
}

enum FormStatus{
  APPROVED
  NOT_APPROVED
}

model User {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  username String @unique
  password String
  school String
  institute String
  position String
  role Role @default(STUDENT)
  sex String
  phone String
  email String  @unique


  signatures Signature[] @relation("userSignatures")

  advisorID Int?  @unique
  advisor   User?    @relation("advisor", fields: [advisorID], references: [id])
  students     User[]   @relation("advisor")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Signature {
  id Int @id @default(autoincrement())
  signature String

  userID Int
  user User @relation(fields: [userID], references: [id], onDelete: Cascade, name: "userSignatures")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}