generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextIndex", "fullTextSearch"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Position{
  NONE
  ADVISOR
  HEAD_INSTITUTE
  COMMITTEE_OUTLINE
  COMMITTEE_INSTITUTE
  COMMITTEE_EXAMING
}

enum Role{
  STUDENT
  COMMITTEE
  ADMIN
  SUPER_ADMIN
}

enum Status{
  APPROVED
  NOT_APPROVED
}

model User {
  id Int          @id @default(autoincrement())
  firstName       String
  lastName        String
  username        String  @unique
  password        String
  email           String  @unique
  phone           String?
  sex             String
  educationLevel String
  school          String
  program         String
  programYear    String?
  position        Position
  role            Role
  formState       Int? 
  signatureUrl    String? @db.LongText
  profileUrl      String? @db.LongText

  //นศ. อาจารย์ที่ปรึกษา
  advisorID Int?
  advisor   User?    @relation("advisor", fields: [advisorID], references: [id])
  
  //อาจารย์ที่ปรึกษามี นศ. หลายคน
  students     User[]   @relation("advisor")

  //นศ. สร้างฟอร์ม
  outlineForm             OutlineForm[]     @relation("formOwner")
  //เป็นอาจารย์ที่ปรึกษา thesis
  thesisAdvisor     OutlineForm[]      @relation("thesisAdvisor")
  //เป็นอาจารย์ที่ปรึกษาร่วม thesis
  thesisCoAdvisor   OutlineForm[]      @relation("thesisCoAdvisor")
  //เป็นกรรมการโครงร่าง
  committeeOutline   OutlineForm[]      @relation("committeeOutline")
  //เป็นกรรมการโครงร่าง
  committeeInstitute   OutlineForm[]      @relation("committeeInstitute")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OutlineForm {
  id                           Int       @id @default(autoincrement())
  date                         String
  thesisNameTH                 String
  thesisNameEN                 String

  //กรรมการโครงร่าง
  committeeOutlineStatus      String?
  committeeOutlineComment     String?
  dateCommitteeOutlineSign    String?
  committeeOutlineID Int?
  committeeOutline       User? @relation(fields: [committeeOutlineID], references: [id], name: "committeeOutline")

  //กรรมการสำนัก
  committeeInstituteStatus      String?
  committeeInstituteComment     String?
  dateCommitteeInstituteSign    String?
  committeeInstituteID Int?
  committeeInstitute        User? @relation(fields: [committeeInstituteID], references: [id], name: "committeeInstitute")

  studentID                    Int
  student        User @relation(fields: [studentID], references: [id], name: "formOwner")

  advisorID                    Int
  advisor        User @relation(fields: [advisorID], references: [id], name: "thesisAdvisor")

  coAdvisorID                 Int?
  coAdvisor      User? @relation(fields: [coAdvisorID], references: [id], name: "thesisCoAdvisor")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}